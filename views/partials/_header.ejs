<head>
  <title>TinyApp</title>
</head>

<% if (username) { %>
  <h1>Welcome</h1>
  <p>Sign in as <%= username %></p>
  <form method="POST" action="/logout"> <button>Logout</button></form>


  <% } else { %>
  <h1>Please Sign in</h1>
<form action="/login" method="POST">
  <h2><label for="login">Login: </label></h2>
  <label>Email: </label>
      <input id="email" type="email" name="email" placeholder="youremail@example.com" style="width: 150px">
  <label>Password: </label>
      <input id="password" type="password" name="password" placeholder="your password here" style="width: 150px">
      <input type="submit" value="submit">
</form>



<a href="/urls/register">Register Now</a>
<% } %>
